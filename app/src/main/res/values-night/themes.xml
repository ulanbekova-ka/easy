<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.App.Main</item>
    </style>

    <style name="Theme.App.Main" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@color/black_2</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/black_2</item>
        <item name="titleCentered">true</item>
    </style>

</resources>